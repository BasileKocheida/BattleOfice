<style type="text/css">
    .form-error {
        color: red;
        font-weight: bold;
        padding-bottom:10px;
    }
    .form-error ul {
        margin:0;
    }
</style>

{# Etape 2 #}
   {{ form_start(form) }}
<div class="card step_2">

             <div class="card-content">
        <span class="card-title color_product_primary center-align">Étape 2</span>
        <p class="h6 center-align">Remplissez ce formulaire</p>
        <div class="form-wrapper">
        
            <div class="input-field">
                {{ form_widget(form.firstname, {'attr':{'require': 'true'}}) }}
                {{ form_label(form.firstname) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                {{ form_widget(form.name) }}
                {{ form_label(form.name) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                {{ form_widget(form.adress) }}
                {{ form_label(form.adress) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                {{ form_widget(form.complement_adress) }}
                {{ form_label(form.complement_adress) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                 {{ form_widget(form.city) }}
                {{ form_label(form.city) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
               {{ form_widget(form.cp) }}
                {{ form_label(form.cp) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                {{ form_widget(form.country) }}
                {{ form_label(form.country) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                {{ form_widget(form.tel) }}
                {{ form_label(form.tel) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                {{ form_widget(form.email) }}
                {{ form_label(form.email) }}
                <div class="form-error"></div>
            </div>
            <div class="input-field">
                <input type="text">
                <label>Confirmation email</label>
                <div class="form-error"></div>
            </div>
        </div>

</div>

    <ul class="collapsible">
        <li>
            <div class="collapsible-header"><i class="material-icons">markunread_mailbox</i>Adresse de livraison différente ?</div>
            <div class="collapsible-body">
                <div class="input-field">
                {{ form_widget(form.delivery.firstname) }}
                {{ form_label(form.delivery.firstname) }}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                {{ form_widget(form.delivery.name) }}
                {{ form_label(form.delivery.name) }}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                {{ form_widget(form.delivery.adress) }}
                {{ form_label(form.delivery.adress) }}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                {{ form_widget(form.delivery.complement_adress) }}
                {{ form_label(form.delivery.complement_adress) }}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                    {{ form_widget(form.delivery.city) }}
                {{ form_label(form.delivery.city) }}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                   {{ form_widget(form.delivery.cp) }}
                {{ form_label(form.delivery.cp) }}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                    {{ form_widget(form.delivery.country) }}
                {{ form_label(form.delivery.country) }}
                    <div class="form-error"></div>
                </div>
                <div class="input-field">
                   {{ form_widget(form.delivery.tel) }}
                {{ form_label(form.delivery.tel) }}
                    <div class="form-error"></div>
                </div>
            </div>
        </li>
    </ul>
</div>
{{ form_end(form) }}
{# Etape 3 #}
<div class="card step_3">
    <div class="card-content">
        <span class="card-title color_product_primary center-align">Étape 3</span>
        <p class="h6 center-align">Choisissez un paiement</p>
        <ul class="collapsible">
            <li class="active">
                <div class="collapsible-header"><i class="fas fa-credit-card"></i>Payer avec la Carte Bancaire</div>
                <div class="collapsible-body card-form">
                    <div class="row">
                        <div class="center-align">
                            <div id="card-element"></div>
                            <button type="submit" name="payment" value="stripe" class="btn-large btn-block waves-effect waves-light">Continuer</button>
                            <p>J'accepte les <a href="https://feelwellshop.com/fr/conditions-generales-de-ventes" target="_blank">conditions générales de vente</a></p>
                            <img class="responsive-img monetico" src="assets/images/paiement-securise-stripe.jpeg" alt="Stripe protège vos achats">
                        </div>
                    </div>
                </div>
            </li>
            <li>
                <div class="collapsible-header"><i class="fab fa-cc-paypal"></i>Payer avec Paypal</div>
                <div class="collapsible-body">
                    <div class="row">
                        <div class="center-align">
                            <button type="submit" name="payment" value="paypal" class="btn-large btn-block waves-effect waves-light">Continuer sur PayPal</button>
                            <p>J'accepte les <a href="https://feelwellshop.com/fr/conditions-generales-de-ventes" target="_blank">conditions générales de vente</a></p>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>


   